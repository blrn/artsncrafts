<html>
  <head>
    <script src="https://cdn.jsdelivr.net/npm/p5@1.7.0/lib/p5.js"></script>
    <script src="{{sketch_path}}"></script>
  </head>
  <body>
  <h1>Sketches</h1>
  <hr/>
    <ul>
        {%- for sketch in sketches -%}
        {%- if sketch.description -%}
        {%- set desc_string = ": " + sketch.description -%}
        {%- else -%}
        {%- set desc_string = "" -%}
        {%- endif -%}
        {%- if not sketch.hidden -%}
        <li><a href="{{sketch.href}}">{{sketch.name}}</a>{{desc_string}}</li>
        {% endif %}
        {%- endfor -%}
    </ul>
  </body>
</html>